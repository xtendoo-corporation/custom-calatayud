<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">Product template form (multi-company cost button)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view" />
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <field name="standard_price" position="attributes">
                <attribute name="class" separator=" " add="oe_inline" />
            </field>
            <field name="standard_price" position="after">
                <button
                    name="set_multicompany_cost"
                    icon="fa-clone"
                    string="Propagate Cost"
                    type="object"
                    class="btn btn-link oe_inline"
                    groups="account.group_account_user"
                />
            </field>
        </field>
    </record>

    <record model="ir.actions.server" id="action_set_multicompany_cost">
        <field name="name">Propagate Cost</field>
        <field name="model_id" ref="product.model_product_template" />
        <field name="binding_model_id" ref="product.model_product_template" />
        <field name="binding_view_types">list</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]" />
        <field name="state">code</field>
        <field name="code">
for one in records:
    one.set_multicompany_cost()
        </field>
    </record>
</odoo>
