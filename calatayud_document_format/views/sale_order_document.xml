            <!--                <th name="th_reference" class="text-start">Referencia</th>-->
            <!--            </xpath>-->
            <!--taxes-->
            <xpath expr="//th[@name='th_taxes']" position="replace">
                <th name="th_taxes"/>
            </xpath>

            <!--            Codigo nuevo 18/06 -->
            <xpath expr="//table[1]/thead[1]/tr[1]/th[1]" position="replace">
                <th name="th_description_product" class="text-start">
                    <span>Descripci√≥n</span>
                </th>
            </xpath>
            <xpath expr="//table[1]/thead[1]/tr[1]/th[1]" position="before">
                <th name="th_product_name" class="text-start">
                    <span>Nombre</span>
                </th>
            </xpath>
            <xpath expr="//table[1]/tbody/t/tr/t[1]/td[1]" position="replace">
                <td name="td_product_name">
                    <span t-field="line.product_id.name" style="font-size:12px"/>
                </td>
            </xpath>
            <xpath expr="//table[1]/tbody/t/tr/t[1]/td[2]" position="replace">
            <td name="td_description_product">
                <span
                    t-esc="line.name.split(line.product_id.name)[1] if line.product_id.name in line.name else line.name"
                    style="font-size:12px"/>
            </td>
            </xpath>
            <xpath expr="//table[1]/tbody/t/tr/t[1]/td[2]" position="after">
                <td name="td_quantity_product" style="text-align:right;">
                    <span t-field="line.product_uom_qty" style="font-size:12px"/>
                </td>
            </xpath>
            <!--            HASTA AQUI 18/06 -->

            <xpath expr="//th[@name='th_priceunit']" position="replace">
                <th name="th_priceunit" class="text-end">Precio</th>
            </xpath>

            <!--TABLE BODY-->
            <!--taxes-->
            <xpath expr="//td[@name='td_taxes']/span[1]" position="replace"/>
            <!--product uom_id-->
<!--            <xpath expr="//td[@name='td_quantity']/span[2]" position="replace"/>-->
            <!--CHANGE THE FONT SIZES-->
            <!--content in the table-->
            <xpath expr="//tbody[@class='sale_tbody']" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>
        </template>
    </data>
