<?xml version="1.0"?>
<odoo>
    <data>
        <!--ADD PAYMENT MODE-->
        <template id="calatayud_document_format.report_saleorder_document_inherit"
                  inherit_id="sale.report_saleorder_document">

            <xpath expr="//th[@name='th_taxes']" position="replace">
                <th name="th_taxes"/>
            </xpath>

            <xpath expr="//table[1]/thead[1]/tr[1]/th[1]" position="replace">
                <th name="th_product_line_name" class="text-start">
                    <span>Descripci√≥n</span>
                </th>
            </xpath>

            <xpath expr="//table[1]/thead[1]/tr[1]/th[1]" position="before">
                <th name="th_product_name" class="text-start">
                    <span>Nombre</span>
                </th>
            </xpath>

            <xpath expr="//table[1]/tbody/t/tr/t[1]/td[1]" position="replace">
                <td name="td_product_line_name">
                    <span t-field="line.product_line_name" style="font-size:12px"/>
                </td>
            </xpath>

            <xpath expr="//table[1]/tbody/t/tr/t[1]/td[2]" position="replace">
                <td name="td_product_line_description">
                    <span t-field="line.product_line_description" style="font-size:12px"/>
                </td>
            </xpath>

            <xpath expr="//table[1]/tbody/t/tr/t[1]/td[2]" position="after">
                <td name="td_quantity_product" style="text-align:right;">
                    <span t-field="line.product_uom_qty" style="font-size:12px"/>
                </td>
            </xpath>

            <xpath expr="//th[@name='th_priceunit']" position="replace">
                <th name="th_priceunit" class="text-end">Precio</th>
            </xpath>

            <xpath expr="//td[@name='td_taxes']/span[1]" position="replace"/>

            <xpath expr="//tbody[@class='sale_tbody']" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>

            <xpath expr="//div[@name='so_total_summary']" position="after">
                <span t-if="env.context.get('proforma', False) or is_pro_forma">
                    <strong>Forma de pago:</strong>
                    <t t-if="doc.company_id.name == 'La Tienda de Calatayud S.L.'">
                        Banco Santander : ES76 0049 5907 4423 1608 6239
                    </t>
                    <t t-else="">
                        Banco Santander : ES30 0049 5907 4324 1608 5968
                    </t>
                </span>
            </xpath>

        </template>
    </data>
</odoo>
