<?xml version="1.0"?>
<odoo>
    <data>
        <template id="calatayud_document_format.report_delivery_document_inherit"
                  inherit_id="stock.report_delivery_document">
            <!--product description on completed albaran-->
            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[1]/span" position="after">
                <p>
                    <span t-field="move.product_id.description_sale" style="font-size:12px"/>
                </p>
            </xpath>
            <!--product description on remaining quantities not yet delivered on partial delivery document-->
            <xpath expr="//table[@name='stock_backorder_table']/tbody/t/tr/td[1]/span" position="after">
                <p>
                    <span t-field="bo_line.product_id.description_sale" style="font-size:12px"/>
                </p>
            </xpath>
            <!--CHANGE THE FONT SIZES-->
            <xpath expr="//table[@name='stock_move_table']/tbody" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>
            <xpath expr="//table[@name='stock_move_line_table']/tbody" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>
            <xpath expr="//table[@name='stock_backorder_table']/tbody" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>
        </template>
        <!--product description on remaining quantities delivered on partial delivery document-->
        <template id="calatayud_document_format.stock_report_delivery_has_serial_move_line_inherit"
                  inherit_id="stock.stock_report_delivery_has_serial_move_line">
            <xpath expr="//td[1]/span" position="after">
                <p>
                    <span t-field="move_line.product_id.description_sale" style="font-size:12px"/>
                </p>
            </xpath>
            <!--CHANGE THE FONT SIZES-->
            <xpath expr="//td[1]" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>
            <xpath expr="//td[2]" position="attributes">
                <attribute name="style">font-size:12px</attribute>
            </xpath>
        </template>
    </data>
</odoo>
