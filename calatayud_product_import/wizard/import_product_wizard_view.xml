<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="import_product_wizard_view" model="ir.ui.view">
        <field name="name">import.product.wizard.view</field>
        <field name="model">calatayud.product.import</field>
        <field name="arch" type="xml">
            <form string="Import Product">
                <group>
                    <field name="import_file" filename="filename"/>
                </group>
                <footer>
                    <button name="action_import_file" string="Import" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="calatayud_import_product_action" model="ir.actions.act_window">
        <field name="name">Calatayud Import Product</field>
        <field name="res_model">calatayud.product.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>


