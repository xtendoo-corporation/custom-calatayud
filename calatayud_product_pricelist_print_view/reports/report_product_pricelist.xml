<odoo>
    <template id="calatayud_report_product_pricelist_document"
              inherit_id="product_pricelist_direct_print.report_product_pricelist_document">
        <xpath
            expr="//div[hasclass('page')]/h2[1]"
            position="replace">
            <strong>
                <h2 style="text-align: center; color: black; border: 1pt solid black">Tarifa 2024
                    <t t-if="o.show_pricelist_name">
                        <span t-field="pricelist.name"/>
                    </t>
                </h2>
            </strong>
        </xpath>

        <xpath
            expr="//div[hasclass('page')]/div[1]/div[1]"
            position="replace">
        </xpath>
        <xpath
            expr="//div[hasclass('page')]/div[1]/div[1]"
            position="replace">
        </xpath>

        <xpath
            expr="//div[hasclass('page')]/table[1]/thead[1]/tr[3]"
            position="replace">
            <tr>
                <th style="font-size:14px; text-align:left">
                    <strong>REFERENCIA</strong>
                </th>
            </tr>
        </xpath>

        <xpath
            expr="//div[hasclass('page')]/table[1]/thead[1]/tr[3]/th[1]"
            position="after">
            <th t-if="o.description_product" style="font-size:14px; text-align:left">
                <strong>DESCRIPCIÃ“N</strong>
            </th>

            <th style="font-size:14px; text-align:right">
                <strong>METRO</strong>
            </th>
            <th t-if="o.show_pieces" style="font-size:14px; text-align:right">
                <strong>PIEZA</strong>
            </th>
        </xpath>

        <xpath expr="//div[hasclass('page')]/table[1]/tbody[1]/t[1]/tr[1]/td[1]" position="replace">
            <td style="width:275px;">
                <t t-if="o.show_variants">
                    <span t-field="product.default_code" style="font-size:12px"/>
                </t>
                <t t-else="">
                    <span t-field="product.name" style="font-size:12px"/>
                </t>
            </td>
        </xpath>

        <xpath
            expr="//div[hasclass('page')]/table[1]/tbody[1]/t[1]/tr[1]/td[1]"
            position="after">
            <td t-if="o.description_product" style="width:275px;">
                <span t-field="product.description_sale" style="font-size:12px"/>
            </td>
        </xpath>

        <xpath
            expr="//div[hasclass('page')]/table[1]/tbody[1]/t[1]/tr[1]/td[5]"
            position="after">
            <td t-if="pricelist" class="text-right" style="text-align:right;">
                <strong
                    t-field="o.with_context(product=product).product_price_piece"
                    t-options='{"widget": "float", "precision": 2}'
                    style="font-size:12px"
                />
                <span t-field="pricelist.currency_id.symbol" style="font-size:12px"/>
            </td>
        </xpath>

        <xpath
            expr="//div[hasclass('page')]/table[1]/tbody[1]/t[1]/tr[1]/td[5]"
            position="replace">
            <td style="text-align:right;" t-if="o.show_pieces and product.sale_only_piece">
                <strong
                    t-field="o.with_context(product=product).product_price"
                    t-options='{"widget": "float", "precision": 2}'
                    style="font-size:12px"
                />
                <span t-field="pricelist.currency_id.symbol" style="font-size:12px"/>
            </td>
            <td style="text-align:center;" t-if="not product.sale_only_piece">
                <strong style="text-align:center;">-</strong>
            </td>
        </xpath>

    </template>
</odoo>
