<?xml version="1.0" encoding="UTF-8" ?>

// crea una vista para importar productos desde un excel

<odoo>
    <record id="view_import_product_wizard" model="ir.ui.view">
        <field name="name">import.product.wizard</field>
        <field name="model">import.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Product">
                <group>
                    <field name="file" filename="filename"/>
                </group>
                <footer>
                    <button name="import_product" string="Import" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
